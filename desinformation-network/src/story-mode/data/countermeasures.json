{
  "meta": {
    "id": "story-mode.countermeasures",
    "version": "1.0.0",
    "created": "2025-12-28",
    "description": "Gegner-Events und Gegenmaßnahmen basierend auf DISARM Framework",
    "notes": [
      "DISARM C00xxx-Codes sind Backend-Referenzen",
      "Events werden durch Spieleraktionen, Risiko-Level und Aufmerksamkeit getriggert",
      "Effekte können temporär oder permanent sein"
    ]
  },
  "trigger_types": {
    "risk_threshold": {
      "description": "Wird ausgelöst wenn kumulatives Risiko einen Schwellenwert erreicht",
      "values": ["low", "medium", "high", "critical"]
    },
    "attention_threshold": {
      "description": "Wird ausgelöst wenn Aufmerksamkeit auf Operationen zu hoch wird",
      "values": ["low", "medium", "high", "critical"]
    },
    "action_specific": {
      "description": "Wird als direkte Reaktion auf bestimmte Aktionen ausgelöst"
    },
    "random_check": {
      "description": "Zufällige Überprüfung basierend auf globalen Faktoren"
    },
    "time_based": {
      "description": "Tritt nach bestimmter Spielzeit automatisch auf"
    }
  },
  "severity_levels": {
    "minor": {
      "label_de": "Gering",
      "description": "Kleine Unannehmlichkeit, leicht zu handhaben"
    },
    "moderate": {
      "label_de": "Mittel",
      "description": "Spürbare Einschränkung, erfordert Anpassung"
    },
    "severe": {
      "label_de": "Schwer",
      "description": "Erheblicher Rückschlag, gefährdet Operationen"
    },
    "critical": {
      "label_de": "Kritisch",
      "description": "Existenzbedrohend, kann zum Spielende führen"
    }
  },
