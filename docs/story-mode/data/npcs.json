        "content",
        "narrative",
        "messaging",
        "media_relations",
        "cultural"
      ],
      "action_affinities": {
        "primary": ["1.3", "1.7", "1.9", "2.8", "2.9", "2.14", "2.15", "3.1", "3.2", "3.3", "3.9", "3.10", "3.11", "3.13", "3.14", "3.16", "3.17"],
        "secondary": ["2.17", "4.1", "4.2", "4.4", "4.5", "4.6", "4.7", "4.10", "4.12", "4.14", "5.2", "5.4", "5.6", "5.11", "5.12", "6.10", "7.1", "7.2", "7.4", "7.5", "7.7", "8.2", "8.3"]
      },
      "enhancement_effects": {
        "level_1": {
          "content_actions": {"quality_bonus": 0.15},
          "narrative_actions": {"persuasion_bonus": 0.1}
        },
        "level_2": {
          "content_actions": {"quality_bonus": 0.25, "viral_potential_bonus": 0.15},
          "narrative_actions": {"persuasion_bonus": 0.2}
        },
        "level_3": {
          "content_actions": {"quality_bonus": 0.4, "viral_potential_bonus": 0.25},
          "narrative_actions": {"persuasion_bonus": 0.3},
          "special": "Kann Mainstream-Durchbruch forcieren"
        }
      },
      "relationship_hints": {
        "neutral": [
          "Katja skizziert etwas auf einem Whiteboard.",
          "'Die Story braucht noch... etwas.'",
          "Sie testet Schlagzeilen an Ihnen."
        ],
        "positive": [
          "'Sie haben ein Auge für das Wesentliche.'",
          "Sie teilt ihre besten Ideen zuerst mit Ihnen.",
          "'Zusammen können wir Narrative formen, die die Welt verändern.'"
        ],
        "negative": [
          "'Das ist... uninspiriert. Wir können besser.'",
          "Sie übergeht Ihre Vorschläge.",
          "'Manche verstehen einfach nicht, wie Geschichten funktionieren.'"
        ]
      },
      "dialogue_triggers": {
        "content_creation": "'Jede große Bewegung beginnt mit einer Geschichte. Was ist unsere?'",
        "viral_success": "'Sehen Sie das? Das ist Kunst. Pure, virale Kunst.'",
        "ethical_concern": "'Wir erzählen nur Geschichten. Was die Menschen damit machen, ist ihre Sache.'"
      }
    },
